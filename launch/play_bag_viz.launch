<launch>
  <arg name="config_rviz"/>
  <arg name="type" default="O"/>
  <arg name="topic" default="/vins_estimator/odometry"/>
  <arg name="bagfile"/>
  <arg name="save_to_file" default="true"/>
  <arg name="visualize" default="true"/>
  <arg name="output_file" default="trajectory.txt"/>
  <arg name="global_output_file" default="global_trajectory.txt"/>

  <node pkg="rviz" type="rviz"
  	name="vins_fusion_rviz"	clear_params="true" output="log" args="-d $(arg config_rviz)" required="true" if="$(eval visualize)"/>

  <node pkg="pose_listener" type="pose_listener"
  	name="pose_listener" clear_params="true" output="log" required="true" if="$(eval save_to_file)">
    <param name="type" value="$(arg type)"/>
    <param name="topic" value="$(arg topic)"/>
    <param name="output_file" value="$(arg output_file)"/>
  </node>

  <node pkg="pose_listener" type="pose_listener"
  	name="pose_listener_global" clear_params="true" output="log" required="true" if="$(eval save_to_file)">
    <param name="type" value="$(arg type)"/>
    <param name="topic" value="/global_fusion_estimator/global_odometry"/>
    <param name="output_file" value="$(arg global_output_file)"/>
  </node>

  <node pkg="rosbag" type="play" name="vins_fusion_rosbag" output="screen" required="true" args="--clock -d 5 $(arg bagfile)"/>

</launch>
